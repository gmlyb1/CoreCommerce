<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.CoreCommerce.repository.ProductRepository">
	
	<resultMap id="ProductMap" type="com.CoreCommerce.domain.Product">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="price" column="price"/>
        <result property="stock" column="stock"/>
        <result property="imageUrl" column="image_url"/>
    </resultMap>
	
	
     <!-- ì „ì²´ ìƒí’ˆ ì¡°íšŒ -->
    <select id="findAll" resultMap="ProductMap">
        SELECT *
        FROM product
        ORDER BY id DESC
    </select>
    
    <select id="findOfferProductList" resultMap="ProductMap">
    	 SELECT *
	     FROM product
	     WHERE offerYn =  1
         ORDER BY id DESC
         LIMIT 4
    </select>

    <!-- IDë¡œ ë‹¨ì¼ ìƒí’ˆ ì¡°íšŒ -->
    <select id="findById" parameterType="long" resultMap="ProductMap">
        SELECT *
        FROM product
        WHERE id = #{id}
    </select>

    <!-- ìƒí’ˆ ë“±ë¡ -->
    <insert id="insert" parameterType="com.CoreCommerce.domain.Product" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product (name, description, price, stock, image_url)
        VALUES (#{name}, #{description}, #{price}, #{stock}, #{imageUrl})
    </insert>

    <!-- ìƒí’ˆ ìˆ˜ì • -->
    <update id="update" parameterType="com.CoreCommerce.domain.Product">
        UPDATE product
        SET
            name = #{name},
            description = #{description},
            price = #{price},
            stock = #{stock},
            image_url = #{imageUrl},
            offerYn = #{offerYn}
        WHERE id = #{id}
    </update>

    <!-- ìƒí’ˆ ì‚­ì œ -->
    <delete id="delete" parameterType="long">
        DELETE FROM product
        WHERE id = #{id}
    </delete>
    
    <select id="findMainPage" resultMap="ProductMap">
    	select * from product order by created_at desc limit 8
    </select>
    
    <!-- ðŸ”¥ ìž¬ê³  ì°¨ê° -->
	<update id="decreaseStock">
	    UPDATE product
	    SET stock = stock - #{quantity}
	    WHERE id = #{productId}
	      AND stock >= #{quantity}
	</update>
	
	<!-- ðŸ”¥ ìž¬ê³  ë³µêµ¬ -->
	<update id="increaseStock">
	    UPDATE product
	    SET stock = stock + #{quantity}
	    WHERE id = #{productId}
	</update>

</mapper>