    <select id="findPaged"
        parameterType="map"
        resultType="com.CoreCommerce.domain.Notice">

		 SELECT
	        id,
	        title,
	        content,
	        writer,
	        created_at AS createdAt,  
	        updated_at AS updatedAt
	    FROM notice
	    ORDER BY is_pinned DESC,created_at DESC
	    LIMIT #{size} OFFSET #{offset}
	
	</select>
	
	
	<select id="countAll" resultType="int">
	    SELECT COUNT(*) FROM notice
	</select>

    <select id="findById" parameterType="long"
            resultType="com.CoreCommerce.domain.Notice">
        SELECT 
            id,
            title,
            content,
            writer,
            created_at AS createdAt,
            updated_at AS updatedAt,
            is_pinned AS isPinned
        FROM notice
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.CoreCommerce.domain.Notice">
        INSERT INTO notice
        (title, content, writer, is_pinned)
        VALUES
        (#{title}, #{content}, #{writer}, #{isPinned})
    </insert>
    
	<update id="update">
	    UPDATE notice
	    SET
	        title = #{title},
	        content = #{content},
	        is_pinned = #{isPinned},
	        updated_at = NOW()
	    WHERE id = #{id}
	</update>
	
	<delete id="delete">
	    DELETE FROM notice
	    WHERE id = #{id}
	</delete>

</mapper>